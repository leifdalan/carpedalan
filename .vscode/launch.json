{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "browser-preview",
      "request": "attach",
      "name": "Browser Preview: Attach"
  },    
    {
      "type": "node",
      "request": "attach",
      "name": "Server",
      "restart": true,
      "protocol": "inspector",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/app",
      "port": 9227,
      "sourceMaps": true,
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "${workspaceFolder}/server/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ]
    
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Lambda",
      "restart": true,
      "protocol": "inspector",
      "localRoot": "${workspaceFolder}/imageResizer/src",
      "remoteRoot": "/var/task",
      "port": 5959,
      "sourceMaps": true,
      "stopOnEntry": false
    },
    {
      "name": "Client",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "url": "https://*carpe*",
      "webRoot": "${workspaceFolder}/client",
      "sourceMaps": true,
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "${workspaceFolder}/client/node_modules/**/*.js",
        "app/node_modules/**/*.js",
        "app/src/SPA/node_modules/**/*.js",
        "react-dom.development.js"
  
      ]
  
    },
    {
      "name": "Prod Client",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "url": "https://*carpe*",
      "webRoot": "${workspaceFolder}/client",
      "sourceMaps": true,
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "${workspaceFolder}/client/node_modules/**/*.js",
        "app/node_modules/**/*.js"
  
      ]
  
    }
  ],
  "compounds": [
    {
      "name": "Server/Client",
      "configurations": ["Server", "Client"]
    }
  ]
}