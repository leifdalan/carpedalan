{
  "private": true,
  "workspaces": [
    "./server",
    "./client"
  ],
  "engines": {
    "node": ">12.0.0 <12.11.0",
    "yarn": "1.21.1"
  },
  "engineStrict": true,
  "name": "carpedalan",
  "version": "2.0.0",
  "description": "Carpe Dalan",
  "main": "index.js",
  "scripts": {
    "setup": "./scripts/setup.sh",
    "lint": "eslint db imageResizer scripts server shared client infra cypress --ext .js,.jsx,.ts,.tsx",
    "integration": "COMPOSE_PROJECT_NAME=cd_test docker-compose -f docker-compose.integration.yml run api yarn integration",
    "regression": "COMPOSE_PROJECT_NAME=regression docker-compose -f docker-compose.regression.yml run --rm e2e yarn test",
    "unit": "COMPOSE_PROJECT_NAME=cd_unit docker-compose -f docker-compose.unit.yml run client yarn test",
    "build": "./scripts/development/buildForTest.sh",
    "start": "yarn && docker-compose up --build -d && ./scripts/development/start.sh",
    "debug-sam": "yarn && DEBUG_SAM='-d 5959' docker-compose up --build -d && ./scripts/development/start.sh",
    "stop": "docker stop $(docker ps -a -q)",
    "e2e": "COMPOSE_PROJECT_NAME=cd_e2e docker-compose -f docker-compose.e2e.yml run --rm cypress yarn cypress run",
    "test": "yarn build && yarn unit && yarn integration && yarn e2e && yarn stop",
    "ci": "yarn lint && yarn build && yarn test && ./scripts/development/buildForDeploy.sh",
    "reload": "docker-compose exec alb nginx -s reload"
  },
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "*.{j|t}s?(x)": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@types/node": "^13.1.6",
    "babel-eslint": "^10.0.3",
    "codecov": "^3.6.1",
    "cypress-dark": "^1.7.14",
    "cypress-file-upload": "^3.5.3",
    "dtsgenerator": "^2.3.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^4.0.9",
    "jest": "^25.1.0",
    "lint-staged": "^9.5.0",
    "openapi-response-validator": "^4.0.0",
    "prettier": "^1.19.1",
    "prettier-eslint": "^9.0.1",
    "superagent": "^5.2.1",
    "supertest": "^4.0.2",
    "typescript": "3.9.0-beta"
  },
  "dependencies": {
    "@pulumi/aws": "1.23.0",
    "@pulumi/awsx": "0.18.14",
    "@pulumi/pulumi": "1.11.1",
    "exif-parser": "^0.1.12",
    "knex": "^0.20.10",
    "redis": "^3.0.2",
    "rimraf": "^3.0.1",
    "sharp": "^0.24.1",
    "sqip": "^0.3.3"
  },
  "optionalDependencies": {
    "cypress": "4.0.2"
  }
}
