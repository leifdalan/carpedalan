{
  "private": true,
  "workspaces": [
    "./server",
    "./client"
  ],
  "name": "carpedalan",
  "version": "2.0.0",
  "description": "Carpe Dalan",
  "main": "index.js",
  "scripts": {
    "setup": "./scripts/setup.sh",
    "lint": "eslint db imageResizer scripts server shared  --ext .js,.jsx",
    "integration": "NODE_ENV=test PG_HOST=localhost PG_PORT=5555 jest -c jestrc.js --runInBand",
    "integration:ci": "PG_HOST=localhost NODE_ENV=ci jest -c jestrc.js --runInBand --verbose",
    "build": "BABEL_ENV=production NODE_ENV=production yarn webpack --mode production --config webpack.prod.js",
    "migrateAndSeed": "MIGRATING=true ./scripts/migrateAndSeed.sh",
    "migrate": "MIGRATING=true ./scripts/migrate.sh",
    "migrateAndStart": "MIGRATING=true yarn migrateAndSeed && DEBUG=knex*,-knex:client,-knex:connection,-knex:pool nodemon --inspect=0.0.0.0 .",
    "start": "yarn && docker-compose up --build -d && ./scripts/development/start.sh",
    "start:prod": "MIGRATING=true NODE_ENV=production ./scripts/migrate.sh && NODE_ENV=production node .",
    "u": "docker-compose up",
    "d": "docker-compose down",
    "du": "docker-compose down && docker-compose up",
    "dub": "docker-compose down && docker-compose up --build",
    "e2e": "PG_PORT=5433 PG_HOST=localhost CYPRESS_BASE_URL=http://local.carpedalan.com cypress open --env configFile=local",
    "cypress": "PG_PORT=5555 PG_HOST=localhost CYPRESS_BASE_URL=http://local.carpedalan.com cypress run --env configFile=local",
    "e2e:ci": "MIGRATING=true NODE_ENV=ci yarn migrate NODE_ENV=ci yarn knex seed:run --knexfile db/knexfile.js && yarn start:prod",
    "test-junit": "cypress run --reporter junit --reporter-options 'mochaFile=junit-results/my-test-output.xml'",
    "test-multiple": "cypress run --reporter mocha-multi-reporters --reporter-options configFile=config.json",
    "updateConfig": "aws s3 cp .env-prod s3://configurations-pipeline/.env --profile carpedev"
  },
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@types/node": "^13.1.6",
    "babel-eslint": "^10.0.3",
    "babel-plugin-dynamic-import-node": "^2.3.0",
    "babel-preset-jest": "^24.9.0",
    "codecov": "^3.6.1",
    "cypress-dark": "^1.7.14",
    "cypress-file-upload": "^3.5.3",
    "dtsgenerator": "^2.3.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^4.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "openapi-response-validator": "^4.0.0",
    "prettier": "^1.19.1",
    "prettier-eslint": "^9.0.1",
    "superagent": "^5.2.1",
    "supertest": "^4.0.2",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.1.0",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "@pulumi/aws": "^1.18.0",
    "@pulumi/awsx": "^0.18.14",
    "@pulumi/pulumi": "^1.8.1"
  },
  "optionalDependencies": {
    "cypress": "3.8.2"
  }
}
