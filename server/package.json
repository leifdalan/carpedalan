{
  "name": "carpedalan-server",
  "version": "2.0.0",
  "description": "Carpe Dalan",
  "main": "index.js",
  "scripts": {
    "test": "LOG_LEVEL=none jest",
    "lint": "eslint src api-v1 db imageResizer scripts server shared  --ext .js,.jsx",
    "integration": "NODE_ENV=test PG_HOST=localhost PG_PORT=5555 jest -c jestrc.js --runInBand",
    "integration:ci": "PG_HOST=localhost NODE_ENV=ci jest -c jestrc.js --runInBand --verbose",
    "build": "BABEL_ENV=production NODE_ENV=production yarn webpack --mode production --config webpack.prod.js",
    "migrateAndSeed": "MIGRATING=true ./scripts/migrateAndSeed.sh",
    "migrate": "MIGRATING=true ./scripts/migrate.sh",
    "migrateAndStart": "MIGRATING=true yarn migrateAndSeed && DEBUG=knex*,-knex:client,-knex:connection,-knex:pool nodemon --inspect=0.0.0.0 ./server",
    "start": "DEBUG=knex*,-knex:client,-knex:connection,-knex:pool nodemon --inspect=0.0.0.0 .",
    "start:prod": "MIGRATING=true NODE_ENV=production ./scripts/migrate.sh && NODE_ENV=production node .",
    "u": "docker-compose up",
    "d": "docker-compose down",
    "du": "docker-compose down && docker-compose up",
    "dub": "docker-compose down && docker-compose up --build",
    "e2e": "PG_PORT=5433 PG_HOST=localhost CYPRESS_BASE_URL=http://local.carpedalan.com cypress open --env configFile=local",
    "cypress": "PG_PORT=5555 PG_HOST=localhost CYPRESS_BASE_URL=http://local.carpedalan.com cypress run --env configFile=local",
    "e2e:ci": "MIGRATING=true NODE_ENV=ci yarn migrate NODE_ENV=ci yarn knex seed:run --knexfile db/knexfile.js && yarn start:prod",
    "test-junit": "cypress run --reporter junit --reporter-options 'mochaFile=junit-results/my-test-output.xml'",
    "test-multiple": "cypress run --reporter mocha-multi-reporters --reporter-options configFile=config.json",
    "updateConfig": "aws s3 cp .env-prod s3://configurations-pipeline/.env --profile carpedev",
    "generateCerts": "sudo openssl req -x509 -nodes -days 730 -newkey rsa:2048 -keyout ./nginx/nginx-selfsigned.key -out ./nginx/nginx-selfsigned.crt -config ./nginx/req.cnf -sha256"
  },
  "author": "",
  "license": "ISC",
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 38.5,
        "branches": 10.5,
        "functions": 15.5,
        "lines": 20
      }
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(react-virtualized|react-select|)/)"
    ],
    "roots": [
      "src"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "coverageDirectory": "reports/coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/api-v1/setup/setupTests.js"
    ]
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "codecov": "^3.3.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.17.1",
    "eslint-plugin-jest": "^22.11.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "json-schema-to-typescript": "^6.1.3",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.11",
    "openapi-response-validator": "^3.7.0",
    "prettier": "^1.17.0",
    "prettier-eslint": "^8.8.2",
    "supertest": "^4.0.2",
    "sw2dts": "^2.6.1"
  },
  "dependencies": {
    "@sentry/browser": "^5.0.8",
    "@sentry/node": "^5.0.8",
    "aws-cloudfront-sign": "^2.2.0",
    "aws-sdk": "^2.437.0",
    "body-parser": "^1.18.3",
    "connect-pg-simple": "^5.0.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "date-fns": "2.0.0-alpha.26",
    "dotenv-safe": "^6.1.0",
    "esm": "^3.2.22",
    "express": "^4.16.4",
    "express-handlebars": "^3.0.2",
    "express-openapi": "^4.5.0",
    "express-session": "^1.16.1",
    "express-winston": "^3.1.0",
    "knex": "^0.16.5",
    "lodash": "^4.17.11",
    "logrocket": "^0.6.20",
    "pg": "^7.9.0",
    "swagger-ui-express": "^4.0.2",
    "uuid": "^3.3.2",
    "winston": "^3.2.1",
    "winston-loggly-bulk": "https://github.com/loggly/winston-loggly-bulk.git#3.x"
  }
}
